/* pages/dialogueSimulation/detail/detail.wxss */
.practice{
  margin: auto;
  margin-right: 4%;
}

.button {
  color: #ffffff;
  height: 50rpx;
  background-color: #554D84;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.cu-chat .cu-item {
  display: flex;
  padding: 20rpx;
}

.avatar{  
  overflow:hidden;  
  display: block;  
  width: 80rpx;  
  height: 80rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.chat{
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.bottom{
  width: 100%;
  background-color: #554D84;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;
  height: 200rpx;
}

.btn{
  width: 100rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: fixed;
  height: 100rpx;
  align-items: center;
  bottom: 50rpx;
  border-radius: 50%;  
}


.circle{
  position:fixed;
  bottom: 50rpx;
  border-radius: 50%;
  z-index: 2;
    height: 85rpx;
    width: 85rpx;
    background-color: #ffffff;
    border: 1px solid #ffffff;
}

.blank-box{
  box-sizing: border-box;
  height: 200rpx;
  
}
