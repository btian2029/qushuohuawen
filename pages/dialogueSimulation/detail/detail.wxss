.cu-chat .cu-item {
  display: flex;
  padding: 20rpx;
}

.avatar{  
  overflow:hidden;  
  display: block;  
  width: 80rpx;  
  height: 80rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.chat{
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.bottom{
  width: 100%;
  background-color: #554D84;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;
  height: 200rpx;
}

.btn{
  width: 200rpx;
  background-color: #fff;
  box-sizing: border-box;
  position: fixed;
  height: 100rpx;
  bottom: 50rpx;
  
}
.blank-box{
  box-sizing: border-box;
  height: 200rpx;
  
}
