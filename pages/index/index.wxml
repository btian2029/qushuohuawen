<!--index.wxml-->

<view class="container">
  <view class="userinfo">
    <!-- 没有用户信息记录（新用户）需要进行授权 -->
  <block wx:if="{{!hasUserInfo && canIUse}}" >
    <image class="image"
    src="https://cloud-minapp-38640.cloud.ifanrusercontent.com/1lETLOJyjQhJR4VE.png"
    background-size="cover"></image>
   

    <text class='title'>趣说华文轻松学中文</text>

    <!-- 授权按钮 -->
    <button open-type="getUserInfo" bindgetuserinfo="getUserInfo"
     class ="button"
     type="button"  style=" left: -1rpx; top: 381rpx"
     open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="getUserInfo"
     bindtap="createUser"
     >一键微信登录</button> 
     </block>

     <!-- 如果存在登录记录 -->
     <block wx:else>

      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover" style="width: 268rpx; height: 272rpx; display: block; box-sizing: border-box; position: relative; left: -1rpx; top: -90rpx" position="relative"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <button class="button" style=" left: -1rpx; top: 381rpx"
      bindtap="bindViewTap"
     
      >进入首页</button>
    </block>
   
    </view>
