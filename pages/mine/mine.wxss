.level {
  color: #ffffff;
  height: 30rpx;
  width: auto;
  border-radius: 25%;
  background-color: #554D84;
}
.pad1
{
  padding-left:50rpx;
  padding-right:50rpx;
  padding-bottom:20rpx;
  padding-top:20rpx;
}

.font-style{
  color: #554D84;
  font-size: 30rpx;
}

.funcInfo1
{
  background-color: #ffffff;
  border-radius: 10rpx;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  border-bottom: solid #E0E3DA 1rpx;
  border-top: solid #E0E3DA 1rpx;
}
.func1
{
  display: flex;
  justify-content: space-between;
