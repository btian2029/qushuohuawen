}



.list-wrapper {
  width: 100%;
}

.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 1rpx;
}

.list-item {
  width: 100%;
  height: 100rpx;
}

.list-item_active {
  background-color: #E0E3DA;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  box-sizing: border-box;
}
.item-text {
  color: #554D84;
  margin-left: 30rpx;
  font-size: 30rpx;
}
.item-image {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}